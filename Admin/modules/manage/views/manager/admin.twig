{% extends "@app/modules/layouts/main.twig" %}
{% block main %}
    <div class="right" xmlns="http://www.w3.org/1999/html">
        <div class="right_content">
            {#<div class="right_content_head clearfix">#}
                {#<span class="selected">添加商品</span>#}
            {#</div>#}
            <div class="right_content_tab right_content_add">
                <form id="addGameLevelForm" method="post" enctype='multipart/form-data'>
                    <div class="right_content_addgame">
                        <div>
                            <label>管理员id：</label>
                            <label>{{ data.id }}</label>
                        </div>
                        <div>
                            <label>管理员名称：</label>
                            <label>{{ data.username }}</label>
                        </div>
                        <div>
                            <label>手机号：</label>
                            <label>{{ data.phone }}</label>
                        </div>
                        <div>
                            <label>性别：</label>
                            {% if data.sex=='1' %}
                            <label>女</label>
                            {% elseif data.sex=='2' %}
                            <label>男</label>
                            {% elseif data.sex=='3' %}
                            <label>保密</label>
                            {% endif %}
                        </div>
                        

                    </div>
                    {#<div class="back_btn add_btn">#}
                        {#<a class="back_btn_blue" id="submitgamelevel">提交</a>#}
                    {#</div>#}
            </div>
        </div>
        </form>
    </div>
{% endblock %}