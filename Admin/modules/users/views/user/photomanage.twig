{% extends "@app/modules/layouts/main.twig" %}
{% block title_name  %}在线直播管理{% endblock %}
{% block title_info  %}在线直播{% endblock %}
{% block content %}

<div class="btn-group col-xs-12">
<div id="datatable_orders_wrapper" class="dataTables_wrapper dataTables_extended_wrapper no-footer">

<div class="portlet blue-hoki box">
		<div class="portlet-title">
			<div class="caption">
				<i class="fa fa-cogs"></i>照片管理   <a href="/users/user/profile?id={{ user.uid }}">{{ user.nickname }} [uid: {{ user.uid }}]</a>
			</div>
    	  </div>
</div>
<div class="btn-group col-xs-12">
    	  {% for photo in photos %}
    	  {% if photo.del==0 %}    	  
    	  <div class=" col-xs-3" style="border:1px solid white;">
		<div id="id_video_container_{{ photo.id }}"  >
			<img src="/{{ photo.url }}" width="280px;">
		</div>
    	  	<div>
        	  	<h5>分类：{{ photo.category }}</h5>
        	  	{{ photo.createtime|date('Y-m-d H:i:s') }}
    	  		<button  class="btn btn-danger recycle" data-uid="{{ photo.id }}"  name="加入黑名单">删除</button>
    	  	</div>
    	  	<br>
    	  </div>
    	  {% endif %}
    	  {% endfor %}
</div>
<div class="btn-group col-xs-12">

<div class="portlet blue-hoki box">
		<div class="portlet-title">
			<div class="caption">
				回收站照片：
			</div>
    	  </div>
</div>

    	  {% for photo in photos %}
    	  {% if photo.del==1 %}    	  
    	  <div class=" col-xs-3" style="border:1px solid white;">
		<div id="id_video_container_{{ photo.id }}"  >
			<img src="/{{ photo.url }}" width="280px;">
		</div>
    	  	<div>
        	  	<h5>分类：{{ photo.category }}</h5>
        	  	{{ photo.createtime|date('Y-m-d H:i:s') }}
    	  		<button  class="btn btn-danger unrecycle" data-uid="{{ photo.id }}"  name="加入黑名单">还原</button>
    	  	</div>
    	  	<br>
    	  </div>
    	  {% endif %}
    	  {% endfor %}
</div>
{# {{ LinkPager(pages)|raw }}#}
{% endblock %}

{% block footerJs %}
<script src="http://qzonestyle.gtimg.cn/open/qcloud/video/live/h5/live_connect.js" charset="utf-8" ></script>
<script type="text/javascript">

$(".recycle").click(function(){
	var photoid = $(this).attr("data-uid");
	var url = "/users/user/photodel?uid={{ user.uid }}";
	$.post( url, { photoid: photoid }, function( data ) {
  		console.log( data ); 
  		alert('照片已经删除到回收站 操作成功！');
		window.location.reload();  		
	}, "json");
});

$(".unrecycle").click(function(){
	var photoid = $(this).attr("data-uid");
	var url = "/users/user/photodel?uid={{ user.uid }}";
	$.post( url, { photoid: photoid, unrecycle:1 }, function( data ) {
  		console.log( data ); 
  		alert('照片已经还原 操作成功！');
		window.location.reload();  		
	}, "json");
});

</script>


<script src="/CDN/themes/admin/pages/scripts/components-editors.js"
	type="text/javascript"></script>
<script type="text/javascript" src="/CDN/plugins/ckeditor/ckeditor.js"></script>
<script type="text/javascript">
function agency_submit(){
	var invite_phone=$('#invite_phone').val();
	//window.location.href="/users/agency/search_parent_info?invite_phone="+invite_phone;
	$.post("/users/agency/search_parent_info",{"invite_phone":invite_phone},
	function(result){
		  if(result.status){
			  $('#agency_submit').submit();
		  }else{
			  alert(result.alert);
		  }
	},"json");
}

function search(){
	var search_username=$("#search_username").val().trim();
	var search_ybname=$("#search_ybname").val().trim();
	var start=$("#start").val().trim();
	var end=$("#end").val().trim();
	if(search_username=="" && search_ybname=="" && start=="" && end==""){
		alert("请填写相关查询信息");
		return false;
	}else{
 		$("#form1").submit();
	}
}

function getphone(id){
// 	alert(id);

	$('#agency_id').val(id);
	$('#getparent').modal('show');

}

var start = {
    elem: '#start',
    format: 'YYYY/MM/DD hh:mm:ss',
    //min: laydate.now(), //设定最小日期为当前日期
    max: '2099-06-16 23:59:59', //最大日期
    istime: true,
    istoday: false,
    choose: function(datas){
         end.min = datas; //开始日选好后，重置结束日的最小日期
         end.start = datas //将结束日的初始值设定为开始日
    }
};
var end = {
    elem: '#end',
    format: 'YYYY/MM/DD hh:mm:ss',
    //min: laydate.now(),
    max: '2099-06-16 23:59:59',
    istime: true,
    istoday: false,
    choose: function(datas){
        start.max = datas; //结束日选好后，重置开始日的最大日期
    }
};
laydate(start);
laydate(end);
</script>
{% endblock %}