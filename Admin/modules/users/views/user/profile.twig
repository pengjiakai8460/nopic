                    {% if userBase.sex==1 %}
                                                         男
                    {% elseif userBase.sex==0 %}
                                                        女
                    {% else %}
                                                        保密
                    {% endif %}
			</div>
			<div class="row static-info col-md-4">
				地址：{{userExtend.loc_address}}
			</div>
			<div class="row static-info col-md-4">
				黑名单截止时间：{{user.ban_expiretime|date('Y-m-d H:i:s')}}
			</div>
			<div class="row static-info col-md-4">
				财富值：{{userWealth.wealth}}
			</div>
			<div class="row static-info col-md-4">
				身份：{{ userExtend.live_signed==1?('签约鱼侠' ~ (userExtend.live_sign_time|date('Y-m-d H:i:s') )):'普通用户' }}
			</div>
			<div class="row static-info col-md-4">
