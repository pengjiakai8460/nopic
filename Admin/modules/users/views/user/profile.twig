{% block content %}
<div class="col-md-12"  >
	<a href="/users/user/setpasswd?uid={{ userBase.uid }}"  data-uid="{{ userBase.uid }}" id="add" class="btn btn-sm red"> 重设密码 <i class="fa fa-plus"></i></a>
	<a href="/users/user/edit?uid={{ userBase.uid }}" id="amend"  data-uid="{{ userBase.uid }}" class="btn btn-sm green"> 资料编辑 <i class="fa fa-edit"></i></a>
	<a href="/users/user/authentication?uid={{ userBase.uid }}"  data-uid="{{ userBase.uid }}" id="area" class="btn btn-sm red"> 认证 <i class="fa fa-edit"></i></a>
	<a href="/users/user/photomanage?uid={{ userBase.uid }}"  data-uid="{{ userBase.uid }}" id="recharge" class="btn btn-sm blue">照片管理<i class="fa fa-file-o"></i></a>
	<a href="/users/user/videomanage?uid={{ userBase.uid }}"  data-uid="{{ userBase.uid }}" id="chongzhi" class="btn btn-sm purple">视频管理<i class="fa fa-user"></i></a>
	<a href="javascript:;" id="redpack"  data-uid="{{ userBase.uid }}" class="btn btn-sm green unfrozen"> 解冻 <i class="fa fa-font"></i></a>
	<a href="javascript:;" id="redpack"   data-uid="{{ userBase.uid }}"class="btn btn-sm red frozen"> 冻结 <i class="fa fa-font"></i></a>
	<a href="javascript:;" id="taskpack"  data-uid="{{ userBase.uid }}" class="btn btn-sm red blacklist">拉黑 <i class="fa fa-font"></i></a>
