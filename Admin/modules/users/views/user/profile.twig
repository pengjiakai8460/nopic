{# 				 <i class="fa"></i>禁用</a>#}
{# 		    </div>#}
		</div>
		<div class="portlet-body">
    			<div class="row static-info col-md-4    ">
    				   {% if userBase.face=="" %}
                                <img  class="my-top-avatar-img" src="{{app.request.hostInfo}}/CDN/img/avatar.png" alt="" style="width: 80px; height:80px;">
                            {% endif %}
                            {% if userBase.face!="" %}
                                {% if userBase.face starts with 'http://' %}
                                    <img class="img-circle img-sm my-top-avatar-img" src="{{userBase.avatar}}" alt="头像"  style="width: 80px; height:80px;">
                                {% endif %}
                                {% if not (userBase.face starts with 'http://') %}
                                    <img class="my-top-avatar-img" src="{{app.request.hostInfo}}/img/upload/{{userBase.face}}" alt="">
                                {% endif %}
                            {% endif %}</a>
    			</div>
			<div class="row static-info col-md-4">
				昵称：{{userBase.nickname}}
			</div>
			<div class="row static-info col-md-4">
				用户ID：{{userBase.uid}}
			</div>
			<div class="row static-info col-md-4">
				状态：{{user.ban_expiretime>0? ('黑名单被禁时间：'.user.ban_expiretime):'正常'}}
			</div>
			<div class="row static-info col-md-4">
				手机号：{{user.mobile}}
			</div>
			<div class="row static-info col-md-4">
				平台：{{user.platform}} -> {{user.name}}
			</div>
			<div class="row static-info col-md-4">
				OpenID：{{user.openid}}
			</div>
			<div class="row static-info col-md-4">
				注册时间：{{user.createtime|date('Y-m-d H:i:s')}}
			</div>
			<div class="row static-info col-md-4">
				最后登录时间：{{userExtend.updatetime|date('Y-m-d H:i:s')}}
			</div>
			<div class="row static-info col-md-4">
				登录次数：{{user.createtime|date('Y-m-d H:i:s')}}
			</div>
			<div class="row static-info col-md-4">
				vip有效期：{{userExtend.vip_expiretime|date('Y-m-d H:i:s')}}
			</div>
			<div class="row static-info col-md-4">
