<div class="form-group">
    <label class=" control-label col-sm-2">上级知识点标签</label>
    <div class="col-sm-10">
        <input type="text" class="form-control"  name="label_pname" value="{{ pname }}"  readonly>
    </div>
</div>
<div class="form-group">
    <label class=" control-label col-sm-2">名称</label>
    <div class="col-sm-10">
        <input type="text" class="form-control"  name="label_name" value="{{ name }}"  required>
    </div>
</div>
<div class="form-group">
    <label class=" control-label col-sm-2">备注</label>
    <div class="col-sm-10">
        <textarea class="form-control"   name="label_remark">{{ remark }}</textarea>
    </div>
</div>
<input type="hidden" name="label_pid"  value="{{ pid }}">
<input type="hidden" name="label_top"  value="{{ top }}">
<input type="hidden" name="label_id" value="{{ id }}" />